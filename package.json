{
  "name": "jonathanthom-com",
  "version": "1.0.0",
  "description": "Personal website for Jonathan Thom",
  "main": "index.html",
  "scripts": {
    "start": "serve",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint": "npm run lint:css && npm run lint:html",
    "lint:fix": "stylelint \"**/*.css\" --fix",
    "test:a11y": "start-server-and-test start http://localhost:3000 \"pa11y http://localhost:3000\""
  },
  "keywords": [],
  "author": "Jonathan Thom",
  "license": "ISC",
  "dependencies": {
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "htmlhint": "^1.7.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "pa11y": "^9.0.1",
    "start-server-and-test": "^2.1.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.0"
  }
}
