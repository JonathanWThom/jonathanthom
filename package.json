{
  "name": "jonathanthom-com",
  "version": "1.0.0",
  "description": "Personal website for Jonathan Thom",
  "main": "index.html",
  "scripts": {
    "setup": "pnpm install && pnpm exec playwright install --with-deps chromium",
    "start": "serve",
    "dev": "browser-sync start --config bs-config.js",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\" --ignore \"playwright-report/**,test-results/**\"",
    "lint": "pnpm run lint:css && pnpm run lint:html",
    "lint:fix": "stylelint \"**/*.css\" --fix",
    "test:a11y": "start-server-and-test 'pnpm start' http://localhost:3000 'pa11y http://localhost:3000'",
    "ci": "pnpm run lint && pnpm test && pnpm run test:e2e && pnpm run test:a11y"
  },
  "packageManager": "pnpm@10.18.0",
  "keywords": [],
  "author": "Jonathan Thom",
  "license": "ISC",
  "dependencies": {
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "browser-sync": "^3.0.4",
    "htmlhint": "^1.7.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "pa11y": "^9.0.1",
    "puppeteer": "^24.23.0",
    "start-server-and-test": "^2.1.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.0"
  }
}
