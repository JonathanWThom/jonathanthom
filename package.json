{
  "name": "jonathanthom-com",
  "version": "1.0.0",
  "description": "Personal website for Jonathan Thom",
  "main": "index.html",
  "scripts": {
    "setup": "bun install && bun x playwright install --with-deps chromium",
    "start": "serve",
    "dev": "browser-sync start --config bs-config.js",
    "test": "bun test",
    "test:e2e": "bun x playwright test",
    "test:e2e:ui": "bun x playwright test --ui",
    "test:e2e:headed": "bun x playwright test --headed",
    "test:e2e:update-snapshots": "bun x playwright test --update-snapshots",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\" --ignore \"playwright-report/**,test-results/**\"",
    "lint": "bun run lint:css && bun run lint:html",
    "lint:fix": "stylelint \"**/*.css\" --fix",
    "ci": "bun run lint && bun test && bun run test:e2e",
    "ci:setup": "bun install --frozen-lockfile && bun x playwright install --with-deps chromium"
  },
  "packageManager": "bun@1.2.0",
  "keywords": [],
  "author": "Jonathan Thom",
  "license": "ISC",
  "dependencies": {
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "browser-sync": "^3.0.4",
    "htmlhint": "^1.8.0",
    "jsdom": "^26.1.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1"
  }
}
